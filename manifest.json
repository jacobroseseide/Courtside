{
    "manifest_version": 3,
    "name": "Courtside",
    "version": "1.0",
    "description": "Never miss a beat with Courtside!",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["storage", "alarms", "notifications"]
  }